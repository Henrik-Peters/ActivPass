<Window x:Class="ActivPass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivPass"
        xmlns:ViewModels="clr-namespace:ActivPass.ViewModels"
        Background="#494A52"
        mc:Ignorable="d"
        Title="ActivPass" Height="830" Width="1640" FontSize="18" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <ViewModels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ContextMenu x:Key="MainMenu" Width="150" FontSize="18" FontFamily="Segoue UI" FontWeight="Normal">
            <MenuItem x:Name="NewMenuItem" Header="New"/>
            <MenuItem x:Name="OpenMenuItem" Header="Open"/>
            <Separator/>
            <MenuItem x:Name="ExitMenuItem" Header="Exit"/>
        </ContextMenu>
    </Window.Resources>
    
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AddSecretButton" Content="Add secret" Grid.Column="2" Width="140" Style="{StaticResource NormalButton}" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="SearchBox" Tag="Search" Text="" Grid.Column="1" Width="700" Height="70" Margin="0,0,0,0" Style="{StaticResource SearchBox}" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="MenuButton" Content="Menu" Grid.Column="0" Grid.Row="0" Style="{StaticResource MenuButton}" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Width="110" Height="40"/>
    </Grid>
</Window>
